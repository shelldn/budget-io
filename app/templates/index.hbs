<h2>{{model.id}}</h2>

<table class="budget-table">

  {{! Months }}
  <tr>
    <th></th>
    {{#each months as |month|}}
      <th colspan="2">{{month.name}}</th>
    {{/each}}
  </tr>

  {{! Plan/Fact }}
  <tr>
    <th></th>
    {{#each months}}
      <th>Plan</th>
      <th>Fact</th>
    {{/each}}
  </tr>

  {{! Income Total }}
  <tr>
    <th>Income</th>
    {{#each months as |month|}}
      {{total-income month=month}}
    {{/each}}
  </tr>

  {{! Income Categories }}
  {{#each incomeCategories as |category|}}
    <tr>
      <td>{{category.name}}</td>
      {{#each months as |month|}}
        {{monthly-income category=category month=month}}
      {{/each}}
    </tr>
  {{/each}}

  <tr>
    <td>
      <a href="javascript:void(0)" {{action "addCategory"}}>Add category</a>
    </td>
  </tr>

  {{! Outgo Total }}
  <tr>
    <th>Outgo</th>
    {{#each months as |month|}}
      <th>0</th>
      <th>0</th>
    {{/each}}
  </tr>

  {{! Outgo Categories }}
  {{#each outgoCategories as |category|}}
    <tr>
      <td>{{category.name}}</td>
      {{#each months as |month|}}
        <td>0</td>
        <td>0</td>
      {{/each}}
    </tr>
  {{/each}}
</table>
